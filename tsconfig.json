{
  "compilerOptions": {
    "target": "es2016",

    "module": "Node16",
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "outDir": "./dist",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
  },
  "include": ["src/**/*.ts"]
}


